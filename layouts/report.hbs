              </div>
              <div class="col-1 p-0"
                   style="-webkit-box-flex: 0;
                          -ms-flex: 0 0 8.333333%;
                          flex: 0 0 8.333333%;
                          padding: 0; margin: 0">
                <img src="https://i.imgur.com/AHcUdRG.png" class="img-fluid" alt="Topleft">
                <div style="
                    position: absolute;
                    top: 0;
                    bottom: 0;
                    left: 0;
                    right: 0;
                    height: 100%;
                    width: 100%;
                    opacity: {{ this.damageOpacities.topright }};
                    background-color: #f53d3d"></div>
              </div>
            </div>
            <div class="row align-items-center justify-content-center"
                 style="-webkit-box-align: center!important;
                        -ms-flex-align: center!important;
                        align-items: center!important;
                        -webkit-box-pack: center!important;
                        -ms-flex-pack: center!important;
                        justify-content: center!important;
                        display: -webkit-box;
                        display: -ms-flexbox;
                        display: flex;
                        -ms-flex-wrap: wrap;
